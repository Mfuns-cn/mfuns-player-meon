{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "module": "commonjs",
    "paths": {
      "@/*": ["./src/js/*"],
      "@lib/*": ["./src/lib/*"],
      "@css/*": ["./src/css/*"]
    },
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "plugins", "playground", "player"]
}
